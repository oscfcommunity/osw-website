---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Container from '../../components/Container.astro';
import EventCard from '../../components/EventCard.astro';

// Get all events and sort by date
const allEvents = await getCollection('events');
const sortedEvents = allEvents.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

// Categorize events
const upcomingEvents = sortedEvents.filter(
  event => event.data.status === 'upcoming' || event.data.status === 'ongoing'
);
const pastEvents = sortedEvents.filter(
  event => event.data.status === 'completed'
);
const featuredEvents = sortedEvents.filter(event => event.data.featured);
---

<Layout title="Events - OSW Community">
  <main class="min-h-screen bg-base-100">
    {/* Hero Section */}
    <section
      class="hero bg-gradient-to-r from-primary to-secondary text-primary-content py-20"
    >
      <Container>
        <div class="hero-content text-center">
          <div class="max-w-4xl">
            <h1 class="text-5xl font-bold mb-6">OSW Community Events</h1>
            <p class="text-xl mb-8 opacity-90">
              Join us for workshops, meetups, hackathons, and more! Connect with
              fellow developers, learn new skills, and contribute to the open
              source community.
            </p>
            <div class="flex flex-wrap gap-4 justify-center">
              <a
                href="#upcoming"
                class="btn btn-lg btn-outline btn-primary-content"
              >
                View Upcoming Events
              </a>
              <a href="#past" class="btn btn-lg btn-ghost btn-primary-content">
                Past Events
              </a>
            </div>
          </div>
        </div>
      </Container>
    </section>

    {/* Stats Section */}
    <section class="py-16 bg-base-200">
      <Container>
        <div class="stats stats-vertical lg:stats-horizontal shadow w-full">
          <div class="stat">
            <div class="stat-title">Total Events</div>
            <div class="stat-value text-primary">{allEvents.length}</div>
            <div class="stat-desc">Since community launch</div>
          </div>

          <div class="stat">
            <div class="stat-title">Upcoming Events</div>
            <div class="stat-value text-black">{upcomingEvents.length}</div>
            <div class="stat-desc">This quarter</div>
          </div>

          <div class="stat">
            <div class="stat-title">Community Impact</div>
            <div class="stat-value text-accent">500+</div>
            <div class="stat-desc">Developers reached</div>
          </div>
        </div>
      </Container>
    </section>

    {/* Featured Events */}
    {
      featuredEvents.length > 0 && (
        <section class="py-16">
          <Container>
            <div class="text-center mb-12">
              <h2 class="text-4xl font-bold mb-4">Featured Events</h2>
              <p class="text-lg text-base-content/70">
                Don't miss these highlighted events from our community
              </p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              {featuredEvents.map(event => (
                <EventCard event={event} featured={true} />
              ))}
            </div>
          </Container>
        </section>
      )
    }

    {/* Upcoming Events */}
    <section id="upcoming" class="py-16 bg-base-200">
      <Container>
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold mb-4">Upcoming Events</h2>
          <p class="text-lg text-base-content/70">
            Join us at these exciting upcoming events
          </p>
        </div>

        {
          upcomingEvents.length > 0 ? (
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              {upcomingEvents.map(event => (
                <EventCard event={event} />
              ))}
            </div>
          ) : (
            <div class="card bg-base-100 shadow-xl">
              <div class="card-body text-center">
                <h3 class="card-title justify-center text-2xl mb-4">
                  No Upcoming Events
                </h3>
                <p class="text-base-content/70 mb-6">
                  We're planning some exciting events! Check back soon or join
                  our community to get notified.
                </p>
                <div class="card-actions justify-center">
                  <a href="https://discord.gg/osw" class="btn btn-primary">
                    Join Our Discord
                  </a>
                  <a href="mailto:events@osw.com" class="btn btn-outline">
                    Suggest an Event
                  </a>
                </div>
              </div>
            </div>
          )
        }
      </Container>
    </section>

    {/* Past Events */}
    <section id="past" class="py-16">
      <Container>
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold mb-4">Past Events</h2>
          <p class="text-lg text-base-content/70">
            Explore our previous events and their impact on the community
          </p>
        </div>

        {
          pastEvents.length > 0 ? (
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              {pastEvents.map(event => (
                <EventCard event={event} />
              ))}
            </div>
          ) : (
            <div class="text-center py-12">
              <p class="text-lg text-base-content/70">
                No past events to display yet.
              </p>
            </div>
          )
        }
      </Container>
    </section>

    {/* Event Types Filter */}
    <section class="py-16 bg-base-200">
      <Container>
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold mb-4">Event Categories</h2>
          <p class="text-lg text-base-content/70">
            Discover different types of events we organize
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {/* Workshop Card */}
          <div
            class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow"
          >
            <div class="card-body text-center">
              <div class="text-4xl mb-4">üõ†Ô∏è</div>
              <h3 class="card-title justify-center">Workshops</h3>
              <p class="text-base-content/70">
                Hands-on learning sessions covering various technologies and
                best practices.
              </p>
              <div class="badge badge-primary badge-outline mt-4">
                {allEvents.filter(e => e.data.eventType === 'workshop').length} events
              </div>
            </div>
          </div>

          {/* Meetup Card */}
          <div
            class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow"
          >
            <div class="card-body text-center">
              <div class="text-4xl mb-4">ü§ù</div>
              <h3 class="card-title justify-center">Meetups</h3>
              <p class="text-base-content/70">
                Regular community gatherings for networking and knowledge
                sharing.
              </p>
              <div class="badge badge-secondary badge-outline mt-4">
                {allEvents.filter(e => e.data.eventType === 'meetup').length} events
              </div>
            </div>
          </div>

          {/* Hackathon Card */}
          <div
            class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow"
          >
            <div class="card-body text-center">
              <div class="text-4xl mb-4">üöÄ</div>
              <h3 class="card-title justify-center">Hackathons</h3>
              <p class="text-base-content/70">
                Intensive coding events where teams build innovative solutions.
              </p>
              <div class="badge badge-accent badge-outline mt-4">
                {allEvents.filter(e => e.data.eventType === 'hackathon').length}
                events
              </div>
            </div>
          </div>
        </div>
      </Container>
    </section>

    {/* Call to Action */}
    <section class="py-16">
      <Container>
        <div
          class="card bg-gradient-to-r from-primary to-secondary text-primary-content"
        >
          <div class="card-body text-center">
            <h2 class="card-title justify-center text-3xl mb-4">
              Want to Organize an Event?
            </h2>
            <p class="text-lg opacity-90 mb-6">
              We're always looking for community members to help organize and
              speak at events. Get in touch with us to discuss your ideas!
            </p>
            <div class="card-actions justify-center">
              <a
                href="mailto:events@osw.com"
                class="btn btn-lg btn-outline btn-primary-content"
              >
                Contact Event Team
              </a>
              <a
                href="/contribute"
                class="btn btn-lg btn-ghost btn-primary-content"
              >
                Learn More
              </a>
            </div>
          </div>
        </div>
      </Container>
    </section>
  </main>
</Layout>
