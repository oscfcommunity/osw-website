---
import { getCollection } from 'astro:content';
import { isPast } from 'date-fns';
import EventCard from '../../components/events/EventCard.astro';
import Container from '../../components/layout/Container.astro';
import Layout from '../../layouts/Layout.astro';

// Get all events and sort by date
const allEvents = await getCollection('events');

const events = allEvents.flatMap(i => i.data);

// Categorize events
const upcomingEvents = events.filter(event =>
  event?.endDate ? !isPast(event.endDate) : !isPast(event.startDate)
);
const pastEvents = events.filter(event =>
  event?.endDate ? isPast(event.endDate) : isPast(event.startDate)
);
---

<Layout title="Events - OSW Community">
  <main class="min-h-screen bg-base-100">
    {/* Hero Section */}
    <section class="py-16">
      <Container>
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-extrabold mb-4">
            OSW Community Events
          </h1>
          <p class="text-lg md:text-xl text-base-content/80 mb-6">
            Workshops, meetups, hackathons â€” join the community to learn, build,
            and contribute to open source.
          </p>

          <div class="flex flex-wrap justify-center gap-3 mb-6">
            <a
              href="#upcoming"
              class="btn btn-primary btn-lg"
              aria-label="View upcoming events"
            >
              View Upcoming Events
            </a>
            <a
              href="#past"
              class="btn btn-ghost btn-lg"
              aria-label="View past events"
            >
              Past Events
            </a>
          </div>

          <div class="h-px w-full bg-base-300 my-8"></div>

          <div class="stats stats-vertical sm:stats-horizontal w-full">
            <div class="stat">
              <div class="stat-title">Total Events</div>
              <div class="stat-value text-primary" aria-live="polite">
                {allEvents.length}
              </div>
              <div class="stat-desc">Since community launch</div>
            </div>

            <div class="stat">
              <div class="stat-title">Upcoming</div>
              <div class="stat-value">{upcomingEvents.length}</div>
              <div class="stat-desc">This quarter</div>
            </div>

            <div class="stat">
              <div class="stat-title">Past</div>
              <div class="stat-value">{pastEvents.length}</div>
              <div class="stat-desc">This quarter</div>
            </div>
          </div>
        </div>
      </Container>
    </section>

    {/* Upcoming Events */}
    <section id="upcoming" class="py-16 bg-base-200">
      <Container>
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold mb-4">Upcoming Events</h2>
          <p class="text-lg text-base-content/70">
            Join us at these exciting upcoming events
          </p>
        </div>

        {
          upcomingEvents.length > 0 ? (
            <div class="flex flex-col gap-4 md:gap-5 mb-8 md:mb-12">
              {upcomingEvents.map(event => (
                <EventCard
                  eventStartDate={event.startDate}
                  eventEndDate={event?.endDate}
                  eventTitle={event.title}
                  eventWebsite={event.websiteLink ?? ''}
                />
              ))}
            </div>
          ) : (
            <div class="card bg-base-100 shadow-xl">
              <div class="card-body text-center">
                <h3 class="card-title justify-center text-2xl mb-4">
                  No Upcoming Events
                </h3>
                <p class="text-base-content/70 mb-6">
                  We're planning some exciting events! Check back soon or join
                  our community to get notified.
                </p>
                <div class="card-actions justify-center">
                  <a href="https://discord.gg/osw" class="btn btn-primary">
                    Join Our Discord
                  </a>
                  <a href="mailto:events@osw.com" class="btn btn-outline">
                    Suggest an Event
                  </a>
                </div>
              </div>
            </div>
          )
        }
      </Container>
    </section>

    {/* Past Events */}
    <section id="past" class="py-16">
      <Container>
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold mb-4">Past Events</h2>
          <p class="text-lg text-base-content/70">
            Explore our previous events and their impact on the community
          </p>
        </div>

        {
          pastEvents.length > 0 ? (
            <div class="flex flex-col gap-4 md:gap-5 mb-8 md:mb-12">
              {pastEvents.map(event => (
                <EventCard
                  eventStartDate={event.startDate}
                  eventEndDate={event?.endDate}
                  eventTitle={event.title}
                  eventWebsite={event.websiteLink ?? ''}
                />
              ))}
            </div>
          ) : (
            <div class="text-center py-12">
              <p class="text-lg text-base-content/70">
                No past events to display yet.
              </p>
            </div>
          )
        }
      </Container>
    </section>

    {/* Call to Action */}
    <section class="py-16 bg-base-200">
      <Container>
        <div class="card">
          <div class="card-body text-center">
            <h2 class="card-title justify-center text-3xl mb-4">
              Want to Organize an Event?
            </h2>
            <p class="text-lg opacity-90 mb-6">
              We're always looking for community members to help organize and
              speak at events. Get in touch with us to discuss your ideas!
            </p>
            <div class="card-actions justify-center">
              <a
                href="mailto:events@osw.com"
                class="btn btn-lg btn-outline btn-primary-content"
              >
                Contact Event Team
              </a>
            </div>
          </div>
        </div>
      </Container>
    </section>
  </main>
</Layout>
