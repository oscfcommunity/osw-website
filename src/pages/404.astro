---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <Fragment slot="head">
    <title>404 - Page Not Found | OSW</title>
    <meta
      name="description"
      content="The page you're looking for doesn't exist"
    />
    <meta name="robots" content="noindex, nofollow" />
  </Fragment>

  <section class="hero min-h-screen">
    <div class="hero-content text-center">
      <div class="max-w-2xl space-y-6">
        <!-- 404 Number -->
        <div class="text-9xl font-bold text-primary opacity-20">404</div>

        <!-- Main Heading -->
        <h1 class="text-4xl md:text-5xl font-bold text-base-content -mt-20">
          Page Not Found
        </h1>

        <!-- Description -->
        <p class="text-lg md:text-xl text-base-content/70 max-w-md mx-auto">
          Oops! The page you're looking for seems to have gone open source and
          disappeared into the community.
        </p>

        <!-- Divider -->
        <div class="divider"></div>

        <!-- Helpful Links -->
        <div class="space-y-4">
          <p class="text-base-content/60">You might want to explore:</p>

          <div class="flex flex-wrap gap-3 justify-center">
            <a href="/" class="btn btn-primary btn-md">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"
                ></path>
              </svg>
              Go Home
            </a>

            <a href="/jobs" class="btn btn-outline btn-md"> Browse Jobs </a>

            <a
              href="https://osd.opensourceweekend.org"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-outline btn-md"
            >
              Open Source Day 2025
            </a>
          </div>
        </div>

        <!-- Search or Contact -->
        <div class="pt-8">
          <p class="text-sm text-base-content/50">
            Still can't find what you're looking for?
            <a
              href="https://github.com/oscfcommunity"
              target="_blank"
              rel="noopener noreferrer"
              class="link link-primary"
            >
              Visit our GitHub
            </a>
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>
