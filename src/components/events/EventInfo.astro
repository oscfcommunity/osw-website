---
import type { CollectionEntry } from 'astro:content';
import { formatDateRange, getStatusBadgeClass } from '../../utils';

interface Props {
  event: CollectionEntry<'events'>['data'];
}

const { event } = Astro.props;

const formatLocation = () => {
  const parts = [
    event.location.city,
    event.location.state,
    event.location.country,
  ].filter(Boolean);
  return parts.join(', ');
};

const dateDisplay = formatDateRange(event.date, event.endDate, 'IST');
const locationDisplay = formatLocation();
const isOnline = event.location.city === 'Online' || event.venue === 'Online';

const mapQuery = event.venue
  ? encodeURIComponent(`${event.venue}, ${locationDisplay}`)
  : encodeURIComponent(locationDisplay);
const mapLink = `https://www.google.com/maps/search/?api=1&query=${mapQuery}`;

const isUpcoming = event.status.toLowerCase() === 'upcoming';
const isCompleted = event.status.toLowerCase() === 'completed';

// Get the current page URL for social sharing
const currentUrl = Astro.url.href;
const shareTitle = encodeURIComponent(event.title);
const shareUrl = encodeURIComponent(currentUrl);
---

<aside class="lg:sticky lg:top-8 space-y-6">
  <div
    class="card bg-base-100 border border-base-300 shadow-xl hover:shadow-2xl transition-shadow"
  >
    <div class="card-body">
      <h3 class="text-xl font-bold mb-6 flex items-center gap-2">
        <svg
          class="w-5 h-5 text-primary"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
          ></path>
        </svg>
        Event Details
      </h3>

      <div class="space-y-5">
        <div class="flex items-start gap-3">
          <svg
            class="w-5 h-5 text-base-content/50 mt-0.5 flex-shrink-0"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <div class="flex-1">
            <div class="text-sm text-base-content/70 mb-1.5">Status</div>
            <div class={`badge ${getStatusBadgeClass(event.status)}`}>
              {event.status.charAt(0).toUpperCase() + event.status.slice(1)}
            </div>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <svg
            class="w-5 h-5 text-base-content/50 mt-0.5 flex-shrink-0"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
            ></path>
          </svg>
          <div class="flex-1">
            <div class="text-sm text-base-content/70 mb-1.5">Date & Time</div>
            <div class="font-medium text-sm">{dateDisplay}</div>
          </div>
        </div>

        {
          event.maxParticipants && (
            <div class="flex items-start gap-3">
              <svg
                class="w-5 h-5 text-base-content/50 mt-0.5 flex-shrink-0"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
                />
              </svg>
              <div class="flex-1">
                <div class="text-sm text-base-content/70 mb-1.5">Capacity</div>
                <div class="font-medium text-sm">
                  {event.maxParticipants} participants
                </div>
              </div>
            </div>
          )
        }
      </div>

      {
        event.tags && event.tags.length > 0 && (
          <div class="mt-6 pt-6 border-t border-base-300">
            <div class="text-sm text-base-content/70 mb-3">Topics</div>
            <div class="flex flex-wrap gap-2">
              {event.tags.map(tag => (
                <span class="badge badge-sm badge-ghost">{tag}</span>
              ))}
            </div>
          </div>
        )
      }

      <div
        class="card-actions flex-col mt-6 pt-6 border-t border-base-300 gap-2"
      >
        {
          isUpcoming && event.registrationLink && (
            <a
              href={event.registrationLink}
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-primary btn-block gap-2"
            >
              <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"
                />
              </svg>
              Register Now
            </a>
          )
        }

        {
          isCompleted && event.registrationLink && (
            <a
              href={event.registrationLink}
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-outline btn-block gap-2"
            >
              <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 10V3L4 14h7v7l9-11h-7z"
                />
              </svg>
              View Resources
            </a>
          )
        }
      </div>
    </div>
  </div>

  <!-- Location/Venue Card -->
  <div class="card bg-base-100 border border-base-300 shadow-xl">
    <div class="card-body">
      <h3 class="text-lg font-bold mb-4">{isOnline ? 'Format' : 'Location'}</h3>

      <div class="flex items-start gap-3">
        <svg
          class="w-5 h-5 text-base-content/50 mt-0.5 flex-shrink-0"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
          ></path>
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <div class="flex-1">
          {
            isOnline ? (
              <div class="font-medium text-sm">Online Event</div>
            ) : (
              <>
                {event.venue && (
                  <div class="font-medium text-sm mb-1">{event.venue}</div>
                )}
                <div class="text-sm text-base-content/70">
                  {locationDisplay}
                </div>
              </>
            )
          }
        </div>
      </div>
    </div>

    {
      !isOnline && (
        <>
          <div class="relative w-full h-64 bg-base-200">
            <iframe
              width="100%"
              height="100%"
              style="border:0"
              loading="lazy"
              allowfullscreen
              referrerpolicy="no-referrer-when-downgrade"
              src={`https://www.google.com/maps?q=${mapQuery}&output=embed`}
              title="Event location map"
            />
          </div>

          <div class="p-4">
            <a
              href={mapLink}
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-outline btn-block btn-sm gap-2"
            >
              <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                />
              </svg>
              Open in Google Maps
            </a>
          </div>
        </>
      )
    }
  </div>

  <!-- Share Event Card -->
  <div class="card bg-base-100 border border-base-300 shadow-xl">
    <div class="card-body">
      <h3 class="text-lg font-bold mb-4">Share Event</h3>

      <div class="flex gap-2">
        <a
          href={`https://twitter.com/intent/tweet?text=${shareTitle}&url=${shareUrl}`}
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-circle btn-sm btn-ghost"
          aria-label="Share on Twitter"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
            ></path>
          </svg>
        </a>

        <a
          href={`https://www.linkedin.com/sharing/share-offsite/?url=${shareUrl}`}
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-circle btn-sm btn-ghost"
          aria-label="Share on LinkedIn"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
            ></path>
          </svg>
        </a>

        <a
          href={`https://www.facebook.com/sharer/sharer.php?u=${shareUrl}`}
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-circle btn-sm btn-ghost"
          aria-label="Share on Facebook"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</aside>
