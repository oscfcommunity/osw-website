---
import {
  formatTime,
  calculateDuration,
  getSessionTypeBadgeClass,
} from '../../utils';

interface Props {
  title: string;
  speaker?: string;
  type:
    | 'REGISTRATION'
    | 'ACTIVITY'
    | 'OPENING'
    | 'KEYNOTE'
    | 'TALK'
    | 'LUNCH'
    | 'CLOSING_KEYNOTE'
    | 'GOODIES_DISTRIBUTION';
  venue?: string;
  startDatetime: Date;
  endDatetime: Date;
  presentationLink?: string;
  isCompleted?: boolean;
}

const {
  title,
  speaker,
  type,
  venue,
  startDatetime,
  endDatetime,
  presentationLink,
  isCompleted = false,
} = Astro.props;

const startTime = formatTime(startDatetime);
const endTime = formatTime(endDatetime);
const duration = calculateDuration(startDatetime, endDatetime);

const formatType = (type: string) => {
  return type.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase());
};

// Get icon based on session type
const getTypeIcon = (type: string) => {
  const icons: Record<string, string> = {
    KEYNOTE:
      '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>',
    TALK: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>',
    REGISTRATION:
      '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>',
    ACTIVITY:
      '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>',
    OPENING:
      '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122"></path>',
    LUNCH:
      '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>',
    CLOSING_KEYNOTE:
      '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>',
    GOODIES_DISTRIBUTION:
      '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>',
  };
  return icons[type] || icons.ACTIVITY;
};
---

<div
  class="card bg-base-100 border border-base-300 hover:border-primary/50 transition-all duration-200 hover:shadow-lg"
>
  <div class="card-body p-4 md:p-6">
    <div class="flex flex-col md:flex-row md:items-start gap-4">
      {/* Icon and Time */}
      <div class="flex items-center gap-3 md:w-48 flex-shrink-0">
        <div class="flex-shrink-0">
          <div
            class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center"
          >
            <svg
              class="w-5 h-5 text-primary"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <Fragment set:html={getTypeIcon(type)} />
            </svg>
          </div>
        </div>
        <div>
          <div class="font-semibold text-sm">{startTime}</div>
          <div class="text-xs text-base-content/60">{duration}</div>
        </div>
      </div>

      {/* Content */}
      <div class="flex-1 space-y-2">
        {/* Type Badge */}
        <div class={`badge badge-sm ${getSessionTypeBadgeClass(type)}`}>
          {formatType(type)}
        </div>

        {/* Title */}
        <h4 class="font-bold text-base md:text-lg leading-snug">{title}</h4>

        {/* Speaker and Venue */}
        <div class="flex flex-wrap gap-3 text-sm text-base-content/70">
          {
            speaker && (
              <div class="flex items-center gap-1.5">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                  />
                </svg>
                <span>{speaker}</span>
              </div>
            )
          }

          {
            venue && (
              <div class="flex items-center gap-1.5">
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  />
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                  />
                </svg>
                <span>{venue}</span>
              </div>
            )
          }
        </div>

        {/* Presentation Link (for completed events) */}
        {
          isCompleted && presentationLink && (
            <div class="pt-2">
              <a
                href={presentationLink}
                target="_blank"
                rel="noopener noreferrer"
                class="btn btn-sm btn-outline btn-primary gap-2"
              >
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"
                  />
                </svg>
                View Presentation
              </a>
            </div>
          )
        }
      </div>
    </div>
  </div>
</div>
