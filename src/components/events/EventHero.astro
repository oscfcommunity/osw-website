---
import type { CollectionEntry } from 'astro:content';
import {
  formatDateRange,
  getStatusBadgeClass,
  getEventTypeBadgeClass,
} from '../../utils';

interface Props {
  event: CollectionEntry<'events'>['data'];
  organizerName?: string;
  organizerLogo?: string;
  presenterName?: string;
  presenterTitle?: string;
  presenterImage?: string;
  price?: string;
  collectionName?: string;
}

const {
  event,
  organizerName = 'Open Source Weekend',
  organizerLogo = '/assets/brands/OSWBlack.svg',
  presenterName,
  presenterTitle,
  presenterImage,
  price = 'Free',
  collectionName,
} = Astro.props;

const formatEventType = (type: string) =>
  type.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase());

const formatLocation = () => {
  if (event.location.city === 'Online' || event.venue === 'Online') {
    return 'Online event';
  }
  return [event.location.city, event.location.state, event.location.country]
    .filter(Boolean)
    .join(', ');
};

const dateDisplay = formatDateRange(event.date, event.endDate, 'IST');
const isUpcoming = event.status.toLowerCase() === 'upcoming';
const isCompleted = event.status.toLowerCase() === 'completed';
const isCancelled = event.status.toLowerCase() === 'cancelled';
const keyPoints = event.tags?.slice(0, 4) || [];
const defaultCoverImage =
  'https://images.unsplash.com/photo-1477959858617-67f85cf4f1df?w=1600&h=900&fit=crop&q=80';

const speakerCount =
  event.profiles?.filter(p => p.type === 'SPEAKER').length || 0;
const communityPartnerCount =
  event.sponsors?.filter(s => s.type === 'COMMUNITY').length || 0;
const totalSponsors = event.sponsors?.length || 0;

const stats = [];
if (event.maxParticipants) {
  stats.push({ value: `${event.maxParticipants}+`, label: 'Attendees' });
}
if (speakerCount > 0) {
  stats.push({
    value: `${speakerCount}`,
    label: speakerCount === 1 ? 'Speaker' : 'Speakers',
  });
}
if (communityPartnerCount > 0) {
  stats.push({ value: `${communityPartnerCount}`, label: 'Partners' });
} else if (totalSponsors > 0) {
  stats.push({ value: `${totalSponsors}`, label: 'Sponsors' });
}
if (isCompleted && event.maxParticipants) {
  const contributors = Math.floor(event.maxParticipants * 0.08);
  stats.push({ value: `${contributors}+`, label: 'New Contributors' });
}
---

<section class="py-4 md:py-12">
  <div class="container mx-auto">
    <div class="card bg-white py-8 shadow-xl border border-base-300 rounded-xl">
      <div class="card-body p-6 md:p-8 lg:p-10">
        <div class="grid grid-cols-1 lg:grid-cols-5 gap-6 lg:gap-20">
          <div class="order-2 lg:order-1 lg:col-span-3 space-y-4 md:space-y-5">
            <div class="badge badge-outline tracking-wide font-bold text-xs">
              {formatEventType(event.eventType)}
            </div>

            <h1
              class="text-2xl md:text-3xl lg:text-4xl font-bold text-base-content leading-tight"
            >
              {event.title}
            </h1>

            <p
              class="text-base-content/70 text-sm md:text-base leading-relaxed"
            >
              {event.description}
            </p>

            {
              keyPoints.length > 0 && (
                <div class="space-y-2">
                  <p class="text-base-content font-semibold text-xs uppercase tracking-wide">
                    Key Topics
                  </p>
                  <div class="flex flex-wrap gap-2">
                    {keyPoints.map(point => (
                      <div class="badge badge-outline badge-sm gap-1.5">
                        <svg
                          class="w-3 h-3"
                          fill="currentColor"
                          viewBox="0 0 20 20"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                            clip-rule="evenodd"
                          />
                        </svg>
                        <span class="capitalize">
                          {point.replace(/-/g, ' ')}
                        </span>
                      </div>
                    ))}
                  </div>
                </div>
              )
            }

            <div class="flex items-center gap-3 pt-2">
              {
                organizerLogo && (
                  <div class="avatar">
                    <div class="w-10 h-10 rounded-lg">
                      <img
                        src={organizerLogo}
                        alt={organizerName}
                        class="object-contain"
                      />
                    </div>
                  </div>
                )
              }
              <div>
                <p class="text-xs text-base-content/60">Organized by</p>
                <p class="font-semibold text-sm text-base-content">
                  {organizerName}
                </p>
              </div>
            </div>

            {
              isUpcoming && (
                <div class="badge badge-outline tracking-wide font-semibold text-xs">
                  Live Q&A Available
                </div>
              )
            }

            {
              stats.length > 0 && (
                <div class="pt-4">
                  <div class="grid grid-cols-2 gap-3">
                    {stats.map(stat => (
                      <div class="text-center p-3 bg-base-200 rounded-lg">
                        <div class="text-2xl font-bold text-primary">
                          {stat.value}
                        </div>
                        <div class="text-xs font-semibold text-base-content/70 uppercase tracking-wide">
                          {stat.label}
                        </div>
                      </div>
                    ))}
                  </div>
                </div>
              )
            }

            {
              isCompleted && (
                <div class="alert alert-success">
                  <svg
                    class="w-5 h-5 shrink-0"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  <span class="text-sm font-medium">
                    Event Successfully Completed
                  </span>
                </div>
              )
            }

            {
              isUpcoming && event.registrationLink && (
                <a
                  href={event.registrationLink}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="btn btn-primary btn-lg w-full shadow-lg hover:shadow-xl transition-all"
                >
                  Register Now
                </a>
              )
            }
          </div>

          <div class="order-1 lg:order-2 lg:col-span-2">
            <div
              class="card shadow-lg border border-base-300 overflow-hidden h-full rounded-lg"
            >
              <figure class="h-full min-h-[200px] lg:min-h-[25rem]">
                <img
                  src={event.coverImage || defaultCoverImage}
                  alt={event.title}
                  class="w-full h-full object-cover"
                  loading="eager"
                />
              </figure>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
